# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/demo-nt219

# Client
CLIENT_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# JWT Configuration - RS256 (RSA asymmetric encryption)
# The keys are stored in ./keys/ directory
# To generate new keys, run: node generate-rsa-keys.js
JWT_ACCESS_PRIVATE_KEY_PATH=./keys/jwt-private.pem
JWT_ACCESS_PUBLIC_KEY_PATH=./keys/jwt-public.pem
JWT_REFRESH_PRIVATE_KEY_PATH=./keys/jwt-refresh-private.pem
JWT_REFRESH_PUBLIC_KEY_PATH=./keys/jwt-refresh-public.pem
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Field-Level Encryption Key (CRITICAL - Generate a strong random 32+ character string)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-must-be-at-least-32-characters-long-use-crypto-randomBytes

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Admin Account (Optional - for seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPassword123!@#

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback

# Email Configuration (REQUIRED for auth features)
# For Gmail:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# For other providers:
# - Outlook: smtp-mail.outlook.com:587
# - Yahoo: smtp.mail.yahoo.com:587
# - Custom SMTP: your-smtp-server.com:587

# ============================================
# VAULT CONFIGURATION (Optional)
# ============================================
# Enable HashiCorp Vault for secret management (set to 'true' to enable)
VAULT_ENABLED=false

# Vault server address
VAULT_ADDR=http://127.0.0.1:8200

# Authentication Method 1: Token (for development)
# Generate with: vault token create
VAULT_TOKEN=

# Authentication Method 2: AppRole (recommended for production)
# Get role ID: vault read auth/approle/role/demo-nt219/role-id
VAULT_ROLE_ID=
# Generate secret ID: vault write -f auth/approle/role/demo-nt219/secret-id
VAULT_SECRET_ID=

# Optional: Vault namespace (for Vault Enterprise only)
VAULT_NAMESPACE=

# Path where secrets are stored in Vault
# For KV v2 engine: secret/data/demo-nt219
# For KV v1 engine: secret/demo-nt219
VAULT_SECRET_PATH=secret/data/demo-nt219
